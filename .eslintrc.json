{
    "extends": [
        "eslint:recommended",
        "plugin:jest/recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "prettier",
        "prettier/react"
    ],
    "rules": {
        "react/prop-types": 0,
        "semi": "error"
    },
    "plugins": ["react", "import", "jsx-a11y", "jest"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest/globals": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
